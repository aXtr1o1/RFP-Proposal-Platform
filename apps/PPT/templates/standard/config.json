{
  "template_id": "standard",
  "name": "Corporate Navy Professional Theme",
  "description": "Professional template with navy background, orange accents, and AI-generated images",
  "version": "4.0.0",
  
  "theme": {
    "primary": "#0A2540",
    "primary_dark": "#051528",
    "secondary": "#06B6D4",
    "accent": "#F97316",
    "sidebar": "#1E293B",
    "background": "#F8F9FA",
    "text": "#1F2937",
    "text_secondary": "#4B5563",
    "text_inverse": "#FFFFFF"
  },
  
  "typography": {
    "title_font": "Calibri",
    "heading_font": "Calibri",
    "body_font": "Calibri",
    "title_size": 44,
    "heading_size": 28,
    "body_size": 16,
    "sub_bullet_size": 14,
    "caption_size": 11,
    "table_header_size": 13,
    "table_body_size": 11
  },
  
  "slide_dimensions": {
    "width": 10,
    "height": 5.625,
    "unit": "inches"
  },

  "backgrounds": {
    "title_slide": {
      "type": "gradient",
      "gradient_type": "linear",
      "angle": 135,
      "stops": [
        {"position": 0, "color": "#0A2540"},
        {"position": 100, "color": "#051528"}
      ]
    },
    "content_slide": {
      "type": "solid",
      "color": "#F8F9FA"
    },
    "section_header": {
      "type": "gradient",
      "gradient_type": "linear",
      "angle": 135,
      "stops": [
        {"position": 0, "color": "#0A2540"},
        {"position": 100, "color": "#1E3A5F"}
      ]
    }
  },

  "decorative_elements": {
    "sidebar": {
      "enabled": true,
      "width": 0.15,
      "color": "#1E293B"
    },
    "top_bar": {
      "enabled": true,
      "height": 0.12,
      "color": "#F97316"
    },
    "accent_circles": {
      "enabled": true,
      "colors": ["#06B6D4", "#FFFFFF"],
      "opacity": [1.0, 0.15]
    }
  },
  
  "icon_config": {
    "default_size": 36,
    "title_icon_size": 80,
    "section_icon_size": 70,
    "default_color": "#06B6D4",
    "title_color": "#FFFFFF"
  },
  
  "content_limits": {
    "max_bullets_per_slide": 5,
    "max_title_length": 60,
    "max_bullet_length": 100,
    "max_sub_bullets": 3,
    "max_table_rows": 8,
    "auto_pagination": true
  },
  
  "table_config": {
    "rounded_corners": true,
    "corner_radius": 8000,
    "max_rows_per_slide": 8,
    "cell_padding": 0.1,
    "border_width": 1,
    "header_color": "#10B981",
    "alternate_row_color": "#F8F9FA",
    "border_color": "#E5E7EB"
  },
  
  "image_generation": {
    "enabled": true,
    "provider": "dalle",
    "model": "dall-e-3",
    "size": "1024x1024",
    "quality": "standard",
    "style": "natural",
    "cache_enabled": true,
    "cache_directory": "cache/images",
    "auto_generate": true,
    "slides_with_images": ["content_slide", "executive", "summary"],
    "image_prompts": {
      "executive": "Professional business executive presenting in modern boardroom, diverse team, photorealistic",
      "team": "Professional business team collaboration meeting, modern office, photorealistic",
      "deliverables": "Professional project deliverables on modern desk, organized workspace, photorealistic",
      "timeline": "Professional project planning timeline visualization, business setting, photorealistic",
      "objectives": "Professional business strategy meeting, goal setting, modern office, photorealistic",
      "default": "Professional business consultation, modern corporate office, photorealistic"
    },
    "image_container": {
      "position": "right",
      "rounded_corners": true,
      "border_enabled": true,
      "border_color": "#E5E7EB",
      "accent_bar_enabled": true,
      "accent_bar_color": "#F97316",
      "accent_bar_height": 0.15,
      "shadow_enabled": false
    }
  },
  
  "ai_config": {
    "content_optimization": true,
    "auto_icon_selection": true,
    "smart_layout_selection": true,
    "visual_data_detection": true
  }
}
